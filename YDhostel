<script>
function sendWhatsApp(){
  var name = document.getElementById('name').value;
  var ci = document.getElementById('checkin').value;
  var co = document.getElementById('checkout').value;
  var guests = document.getElementById('guests').value;
  var room = document.getElementById('roomtype').value;
  var msg = 
    "Hi! I want to book:%0A" +
    "Name: " + name + "%0A" +
    "Check-in: " + ci + "%0A" +
    "Check-out: " + co + "%0A" +
    "Guests: " + guests + "%0A" +
    "Room type: " + room;
  var number = "66938272786";
  window.location.href = "https://wa.me/" + number + "?text=" + msg;
}
</script>

